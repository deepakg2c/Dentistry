<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:background">#f2f2f2</item>-->
    </style>

    <style name="EditTextUnderLineTheme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="login_text_input_layout_style">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:theme">@style/EditTextUnderLineTheme</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/text_input_field_hint_style</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="text_input_field_hint_style" >
        <item name="android:textSize">20sp</item>
    </style>


    <style name="login_text_input_field_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:theme">@style/EditTextUnderLineTheme</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/text_input_field_hint_style</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="normal_text_input_field_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:theme">@style/EditTextUnderLineTheme</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/text_input_field_hint_style</item>
        <item name="android:drawablePadding">10dp</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.NoActionBar" />

    <style name="appointment_schedule_title_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_weight">1.2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="footer_view_button_style">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:background">@drawable/rounded_rectangle_transparent_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">-15dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="datePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerMode" tools:targetApi="lollipop">spinner</item>
        <item name="colorAccent">@color/loginButtonColor</item>
    </style>

    <style name="medical_history_questions_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="medical_history_questions_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="medical_history_radio_group_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="medical_history_radio_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="header_logo_image_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="footer_image_view_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="login_title_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="registration_dob_field_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/dob</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="registration_dob_suffix_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/dob_format</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="registration_dob_underline_text_style">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="login_button_style">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:background">@drawable/rounded_rectangle_white_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#3893FF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="continue_button_style">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">530dp</item>
        <item name="android:background">@drawable/rounded_rectangle_white_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#3893FF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_layout_style">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dialog_message_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="home_admin_registration_button_style">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rounded_rectangle_transparent_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="patient_authorization_field_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="insurance_company_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:spinnerDropDownItemStyle">
            @style/Base.Widget.AppCompat.AutoCompleteTextView
        </item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="patient_authorization_field_style" parent="login_text_input_field_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="patient_authorization_title_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="patient_authorization_check_box_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/appointmentTitleTextColor</item>
    </style>

    <style name="patient_authorization_signature_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="patient_authorization_signature_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="patient_authorization_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="financial_policy_description_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="financial_policy_list_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="notice_policy_description_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="notice_policy_list_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="appointment_cancellation_policy_title_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="appointment_cancellation_policy_description_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="medical_history_form_button_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rounded_rectangle_transparent_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="medical_history_form_button_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="medical_history_signature_clear_button_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentEnd" tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


</resources>
